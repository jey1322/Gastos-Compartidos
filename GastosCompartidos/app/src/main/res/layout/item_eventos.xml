<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/edittext"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="2024/05/03"
            android:textColor="@color/Background"
            android:id="@+id/tvFecha"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOptions"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:textColor="@color/Background"
            android:textSize="15dp"
            android:id="@+id/tvOptions"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_options"
            android:drawablePadding="5dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Honras FÃºnebres"
            android:textColor="@color/text"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/tvEvento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFecha"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipo Evento:"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:id="@+id/tvTipoEvento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEvento"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cooperacion"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvTipoEventoVal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvTipoEvento"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipo Cuota:"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvTipoCuota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEvento"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cuota Fija"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvTipoCuotaVal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvTipoCuota"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvOrganizador"
            tools:text="Organizador: Jairo Antonio Paniagua Garcia"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTipoCuotaVal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCopy"
            android:drawableStart="@drawable/ic_copy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrganizador"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Banco: AVANZ 12345678"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:id="@+id/tvBanco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCopy"
            app:layout_constraintTop_toBottomOf="@id/tvOrganizador"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuota total"
            android:textColor="@color/Background"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:id="@+id/tvCuotaTotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCopy"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>