<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/edittext"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="jpaniagua@isa1890.com"
            android:id="@+id/tvEmail"
            android:textColor="@color/Background"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDelete"
            android:drawableStart="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Jairo Antonio Paniagua Garcia"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:id="@+id/tvName"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDelete"
            android:layout_marginHorizontal="10dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valor cuota:"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:id="@+id/tvCuota"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="14600"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvCuotaVal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvCuota"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estado cuota:"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvEstado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Sin pagar"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvEstadoVal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tvEstado"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ver Pedido"
            android:textColor="@color/Background"
            android:textSize="13dp"
            android:id="@+id/tvPedido"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEstadoVal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Agregar Cuota"
            android:textColor="@color/Background"
            android:textSize="13dp"
            android:visibility="gone"
            android:id="@+id/tvAddCuota"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvEstadoVal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>