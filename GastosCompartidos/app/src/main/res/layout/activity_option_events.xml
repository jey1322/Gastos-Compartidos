<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backp"
    tools:context=".view.optionEvents.OptionEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:drawableStart="@drawable/ic_back"
                android:padding="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opciones del evento"
                android:textColor="@color/text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/back"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEvent"
            tools:text="Evento: CumpleaÃ±os Jairo Paniagua"
            android:textColor="@color/text"
            android:maxLines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:visibility="visible"
            android:indeterminate="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/vista"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Eliminar evento"
                android:drawableStart="@drawable/ic_delete"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/Background"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvDeleteEvent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Salirme del evento"
                android:drawableStart="@drawable/ic_person_off"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/Background"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvSalirmeEvento"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Mi pedido"
                android:drawableStart="@drawable/ic_note"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvPedido"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Editar evento"
                android:drawableStart="@drawable/ic_edit"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvEditEvent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Agregar banco y cuenta bancaria"
                android:drawableStart="@drawable/ic_banco"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvBanco"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Establecer valor cuota fija"
                android:drawableStart="@drawable/ic_cash"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvCuotaFija"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Marcar como cuota pagada"
                android:drawableStart="@drawable/ic_cash"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvCuotaPagada"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Participantes del evento"
                android:drawableStart="@drawable/ic_people"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edittext"
                android:textColor="@color/text"
                android:textSize="13dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/tvParticipantes"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>